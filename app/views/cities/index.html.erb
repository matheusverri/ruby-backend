<%= form_tag(cities_path, method: :get) do %>
  <div class="form-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Digite o nome da cidade" %>
    <%= submit_tag "Pesquisar", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @cities.any? %>
  <h2>Resultados da Pesquisa</h2>
  <ul>
    <% @cities.each do |city| %>
      <li><%= city.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>Nenhum resultado encontrado.</p>
<% end %>